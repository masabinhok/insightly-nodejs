<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      .userprofile {
        display: flex;
        align-items: center;
        border: 2px solid black;
        padding: 10px;
        border-radius: 10px;
        width: fit-content;
        gap: 20px;
      }

      .userprofile img {
        width: 100px;
        height: 100px;
      }
    </style>
    <%- include('./partials/head') %>
    <title>Blog</title>
  </head>
  <body>
    <%- include('./partials/navbar') %>

    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img
        src="../<%= blog.coverImageURL %>"
        width="400px"
        alt="blog cover image"
      />
      <p><%= blog.body %></p>
    </div>

    <div class="container mt-4 userprofile">
      <h1>Created By:</h1>

      <h1><%= blog.createdBy.fullName %></h1>
      <img
        style="border-radius: 50%"
        src="<%= blog.createdBy.profileImageURl  %>"
        alt="profileImageURL"
      />
    </div>
    <div class="container">
      <% if (locals.user) { %>
      <form action="/blog/like/<%= blog._id  %> " method="POST">
        <button class="btn btn-success mt-4">Like (<%= blog.likes %>)</button>
      </form>
      <% } %>
    </div>
    <% if (locals.user) { %>
    <div class="container">
      <% if (locals.user.email === blog.createdBy.email ) { %>
      <form action="/blog/delete/<%= blog._id  %> " method="POST">
        <button class="btn btn-danger mt-4">Delete</button>
      </form>
      <% } %>
    </div>
    <% } %>

    <div class="container mt-3">
      <h1>Comments (<%= comments.length %>)</h1>
      <% if (locals.user) { %>

      <form action="/blog/comment/<%= blog._id  %>" method="POST">
        <div class="mb-3">
          <input
            type="text"
            name="content"
            class="form-control"
            placeholder="Enter your comment"
          />
        </div>
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
      </form>
      <% } %>

      <div class="mt-3">
        <% comments.forEach(comment => { %>
        <div>
          <img
            src="../<%= comment.createdBy.profileImageURl  %>"
            width="50px"
            alt="profileImageURl"
          />
          <%= comment.createdBy.fullName %>:
          <pre><%= comment.content  %></pre>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
